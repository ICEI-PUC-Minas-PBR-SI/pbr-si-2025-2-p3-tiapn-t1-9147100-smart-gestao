{
  "name": "smart-gestao-backend",
  "version": "1.0.0",
  "description": "Backend da aplicação Smart Gestão, construído com Node.js, Express e MongoDB.",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm:start:backend\" \"npm:start:frontend\" \"npm:start:react-demo\" \"npm:summary\"",
    "start:backend": "node server.js",
    "start:frontend": "wait-on http://localhost:5000/api/health && http-server ../frontend -p 3000",
    "test:server": "node test-server.js",
    "dev": "nodemon server.js",
    "start:react-demo": "wait-on http://localhost:3000 && npm start --prefix ../react",
    "start:full-demo": "concurrently \"npm:start:backend\" \"npm:start:frontend\" \"npm:start:react-demo\"",
    "summary": "wait-on tcp:5000 tcp:3000 tcp:3001 && node Scripts/print-summary.js",
    "create-test-users": "node -r dotenv/config Scripts/create-test-companies.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config=./Testes/config/jest.config.cjs --runInBand",
    "test:all": "npm test",
    "test:auth": "npm test -- Testes/1-auth",
    "test:features": "npm test -- Testes/2-features",
    "test:security": "npm test -- Testes/3-security",
    "test:reports": "npm test -- Testes/4-reports",
    "test:uploads": "npm test -- Testes/2-features/uploads.test.js",
    "test:persistence": "npm test -- Testes/3-security/persistence.test.js",
    "test:no-clean": "cross-env PERSISTENCE_TEST_RUN=true npm test",
    "db:populate": "node -r dotenv/config Testes/populate-db.js",
    "db:clean": "node -r dotenv/config Testes/clean-db.js"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^8.19.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pdfkit": "^0.15.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.2",
    "@faker-js/faker": "^10.1.0",
    "babel-jest": "^29.7.0",
    "clipboardy": "^4.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.3.0",
    "nodemon": "^3.1.10",
    "pdf-parse": "^1.1.1",
    "wait-on": "^7.2.0"
  }
}
