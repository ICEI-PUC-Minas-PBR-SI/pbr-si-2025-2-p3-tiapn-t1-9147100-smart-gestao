{
  "name": "smart-gestao-backend",
  "version": "1.0.0",
  "description": "Backend da aplicação Smart Gestão, construído com Node.js, Express e MongoDB.",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm:start:backend\" \"npm:start:frontend\"",
    "start:backend": "node server.js",
    "start:frontend": "http-server ../frontend -p 3000",
    "dev": "nodemon server.js",
    "test": "concurrently -k -s first \"npm:test:server\" \"npm:test:runner\"",
    "test:server": "node server.js",
    "test:runner": "npx wait-on http://localhost:5000/api/health && node Testes/run-test-log.js"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "wait-on": "^7.2.0"
  }
}
